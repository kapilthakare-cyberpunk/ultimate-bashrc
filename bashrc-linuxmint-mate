# ==============================================================================
# CLIPBOARD AI HELPERS (Requires CopyQ)
# ==============================================================================

# Cloud grammar correction using tgpt
alias cc='correct-copy'
correct-copy() {
    local input corrected

    if command -v copyq >/dev/null 2>&1; then
        input="$(copyq read 0 2>/dev/null)"
    else
        echo "âš ï¸ CopyQ not installed. Please run: sudo apt install copyq"
        return 1
    fi

    if [[ -z "$input" ]]; then
        echo "âš ï¸ Clipboard is empty."
        return 1
    fi

    if ! command -v tgpt >/dev/null 2>&1; then
        echo "âŒ tgpt not available"
        return 1
    fi

    echo "ğŸ§  tgpt âœ Correctingâ€¦"
    corrected="$(echo "$input" | tgpt 'Please correct the grammar, spelling, and tone in this text. Output only the corrected version.')"
    echo -e "\nâœ… Corrected Output (tgpt):\n$corrected"
    echo "$corrected" | copyq write - 2>/dev/null
    echo -e "\nğŸ“‹ Copied to clipboard."
}

# Local grammar correction using Ollama
correct-local-copy() {
    local input corrected

    if command -v copyq >/dev/null 2>&1; then
        input="$(copyq read 0 2>/dev/null)"
    else
        echo "âš ï¸ CopyQ not installed."
        return 1
    fi

    if [[ -z "$input" ]]; then
        echo "âš ï¸ Clipboard is empty."
        return 1
    fi

    if ! command -v ollama >/dev/null 2>&1; then
        echo "âŒ Ollama not available. Falling back to tgpt..."
        correct-copy
        return
    fi

    echo "ğŸ§  Ollama (phi3:mini) âœ Correctingâ€¦"
    corrected="$(echo "Please correct the grammar and spelling: \"$input\"" | ollama run phi3:mini)"
    echo -e "\nâœ… Corrected Output (Ollama):\n$corrected"
    echo "$corrected" | copyq write - 2>/dev/null
    echo -e "\nğŸ“‹ Copied to clipboard."
}

# ==============================================================================
# FUNCTIONS
# ==============================================================================
tgpt-model() {
  local config_file="$HOME/.config/tgpt/config.yaml"
  [ -f "$config_file" ] && sed -i "s/^model: .*/model: \"$1\"/" "$config_file" && echo "Switched tgpt model to: $1"
}

fcd() {
    local dir
    dir=$(find ${1:-.} -type d -not -path '*/.*' -not -path '*/node_modules' -not -path '*/venv' 2>/dev/null | fzf --preview 'ls -la {}' --height 40% --reverse) && cd "$dir"
}

extract() {
    if [ -f "$1" ]; then
        case "${1,,}" in
            *.tar.bz2) tar xjf "$1" ;;
            *.tar.gz)  tar xzf "$1" ;;
            *.bz2)     bunzip2 "$1" ;;
            *.rar)     unrar x "$1" ;;
            *.gz)      gunzip "$1" ;;
            *.tar)     tar xf "$1" ;;
            *.tbz2)    tar xjf "$1" ;;
            *.tgz)     tar xzf "$1" ;;
            *.zip)     unzip "$1" ;;
            *.Z)       uncompress "$1" ;;
            *.7z)      7z x "$1" ;;
            *)         echo "'$1' cannot be extracted" ;;
        esac
    else
        echo "'$1' is not a valid file"
    fi
}

mkcd() {
    mkdir -p "$1" && cd "$1"
}

sysinfo() {
    echo "=== System Information ==="
    echo "Hostname: $(hostname)"
    echo "Kernel: $(uname -r)"
    echo "Uptime: $(uptime -p)"
    echo "Memory: $(free -h | awk '/^Mem:/ {print $3 "/" $2}')"
    echo "Disk: $(df -h / | awk 'NR==2 {print $3 "/" $2 " (" $5 " used)"}')"
    echo "Load: $(cut -d' ' -f1-3 < /proc/loadavg)"
}

# ==============================================================================
# STARTUP SERVICES
# ==============================================================================
if command -v ollama >/dev/null 2>&1 && ! pgrep -x "ollama" > /dev/null; then
    nohup ollama serve > /dev/null 2>&1 &
fi

